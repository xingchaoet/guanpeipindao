        fdata.append("page", page);

        var uid = $("#userid").text();
        fdata.append("usrn", uid);

        var showtype = $("#firstpage").attr("showtype");
        fdata.append("show_type", showtype);

        if (showtype != 'detail') {
            xhr.open('POST', orders_view_url, true);
        } else {
            xhr.open('POST', orders_view_detail_url, true);
        }

        xhr.send(fdata);
